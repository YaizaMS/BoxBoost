FROM node:18

# Crear directorio de trabajo
WORKDIR /app

# Copiar package.json y package-lock.json (si existe)
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el resto del c√≥digo
COPY . .

# Exponer puerto
EXPOSE 3000

# Comando para ejecutar la app
CMD ["npm", "run", "dev"]
